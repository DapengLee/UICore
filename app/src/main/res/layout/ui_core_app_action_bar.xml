<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_action_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/app_action_bar_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ui_core_action_bar_back_black"
        android:layout_gravity="center_vertical"
        android:padding="8dp" />

    <TextView
        android:id="@+id/app_action_bar_back_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/app_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/app_action_bar_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right" />

    <TextView
        android:id="@+id/app_action_bar_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</FrameLayout>